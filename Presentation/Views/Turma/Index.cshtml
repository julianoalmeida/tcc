@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section body{

    <div class="TituloPagina">SelectWithFilter Classs</div>

    <section class="row-fluid">
        <div class="span12 fundo">
            <fieldset>
                <legend title="Filtros de pesquisa">Filtros de pesquisa </legend>
                <form action="#" method="post" name="inserir" class="clearfix form-horizontal">
                    <div class="row-fluid">
                        <div class="span6">
                            <div class="control-group row-fluid">
                                <div class="controls no_margin">
                                    <label for="Nome">Name:</label>
                                    <input type="text" class="span10" name="Name" id="Nome" maxlength="70" /><br>
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="control-group row-fluid">
                                <div class="controls no_margin">
                                    <label for="ClassTime">ClassTime:</label>
                                    @Html.DropDownList("ClassTime")
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 text-right">
                            <button id="btnPesquisar" type="submit" class="btn btn-primary" title="SelectWithFilter"><span class="icon-search"></span>&nbsp;&nbsp;Pesquisar</button>
                            <a class="btn btn-success" id="btnIncluir" href="#"><span class="icon-plus-sign"></span>&nbsp;&nbsp;Incluir</a>
                        </div>
                    </div>
                </form>
            </fieldset>
        </div>
    </section>
    <br />
    <section class="row-fluid">
        <div class="span12 fundo">
            <table id="tbTurma" class="table table-bordered">
                <caption class="clearfix">Resultado da pesquisa</caption>
            </table>
        </div>
    </section>

}




@section Scripts{
    @Scripts.Render("~/Content/Scripts/sistema/Class/Index.js")
}